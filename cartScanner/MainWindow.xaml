            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="_DisplayOutput" Content="Display Output" HorizontalAlignment="Left" Margin="219,178,0,0" Grid.Row="1" VerticalAlignment="Top" Width="114" RenderTransformOrigin="-0.084,0.748" Click="Display_Output_Click" Height="24" Grid.Column="1">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
