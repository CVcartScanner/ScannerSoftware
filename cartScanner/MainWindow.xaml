        </Button>
        <Button x:Name="_256kButton" Content="256k" Grid.Column="1" HorizontalAlignment="Left" Margin="391,65,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="Click_256k" Height="24" Grid.ColumnSpan="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="_512kButton" Content="512k" Grid.Column="2" HorizontalAlignment="Left" Margin="70,65,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="Click_512k" Height="24">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="_SettingsButton" Content="Settings" Grid.Column="1" HorizontalAlignment="Left" Margin="402,10,0,0" VerticalAlignment="Top" Width="80" Click="Settings_Click" Grid.RowSpan="2" Height="24" Grid.ColumnSpan="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
