<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:CVcartScanner.Properties" x:Class="CVcartScanner.MainWindow"
        Title="CV  cartScanner" Height="288.667" Width="672.158" Icon="Resources/cvcs.ico" ResizeMode="CanMinimize" WindowStartupLocation="Manual"
        >

    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>


    <Window.TaskbarItemInfo>
        <TaskbarItemInfo/>
    </Window.TaskbarItemInfo>

    <Grid x:Name="MainGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0,0,0,2" Cursor="Arrow">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*" />
            <ColumnDefinition Width="412*"/>
            <ColumnDefinition Width="198*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="22" />
            <RowDefinition />
            <RowDefinition Height="1" />
        </Grid.RowDefinitions>



        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="98,21,0,0" Grid.Row="1" Width="490" Grid.Column="1" CornerRadius="5" Height="142" VerticalAlignment="Top" RenderTransformOrigin="0.544,1.099" Grid.ColumnSpan="2">
            <Label Content="Cartridge Size" Margin="9,0,363,111" RenderTransformOrigin="0.189,0.418"/>
        </Border>



        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="142" Margin="11,21,0,0" Grid.Row="1" VerticalAlignment="Top" Width="138" Background="#FFA8E3F2" CornerRadius="5"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="48" Margin="11,168,0,0" Grid.Row="1" VerticalAlignment="Top" Width="634" CornerRadius="5"/>

        <Button Content="_Exit" HorizontalAlignment="Left" Margin="49,178,0,0" Grid.Row="1" VerticalAlignment="Top" Width="114" RenderTransformOrigin="-0.084,0.748" Click="FileExit_Click" Height="24" Grid.Column="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <ProgressBar x:Name="ProgressBar"    HorizontalAlignment="Left" Height="33" Margin="104,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="478" Foreground="#FFA8E3F2" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="_SaveResults" Content="Save Results" HorizontalAlignment="Left" Margin="21,178,0,0" Grid.Row="1" VerticalAlignment="Top" Width="114" Click="FileSaveAs_Click" Height="24" RenderTransformOrigin="-0.111,3.271" Grid.ColumnSpan="2">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button Content="_Info" HorizontalAlignment="Left" Margin="91,10,0,0" VerticalAlignment="Top" Width="80" Click="Info_Click" Grid.Column="2" Grid.RowSpan="2" Height="24">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Image HorizontalAlignment="Left" Height="51" Margin="15,-8,0,0" VerticalAlignment="Top" Width="414" Source="CVcartScanner.png" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Label x:Name="ProgressMessage" Content="" HorizontalAlignment="Left" Margin="286,133,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1" Height="30" Width="10"/>
        <Label x:Name="Label1" Content="" HorizontalAlignment="Left" Margin="113.5,1,0,-50" Grid.Row="2" VerticalAlignment="Top" Width="62" Height="50" FontFamily="Nulshock Rg" FontSize="36" Grid.Column="2"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="33" Margin="104,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="478" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Image HorizontalAlignment="Left" Height="137" Margin="15,26,0,0" Grid.Row="1" VerticalAlignment="Top" Width="130" Source="cartScannerAsset.png" Grid.ColumnSpan="2"/>
        <Button x:Name="_32kButton" Content="32k" Grid.Column="1" HorizontalAlignment="Left" Margin="135,65,0,0" Grid.Row="1" VerticalAlignment="Top" Width="80" Click="Click_32k" Height="24">
